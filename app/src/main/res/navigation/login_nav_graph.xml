<navigation
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/nav_graph"
  app:startDestination="@id/pre_login_fragment">

  <fragment
    android:id="@+id/pre_login_fragment"
    android:name="edu.cnm.deepdive.trailtrack.controller.PreLoginFragment"
    tools:layout="@layout/fragment_pre_login">

    <action
      android:id="@+id/navigate_to_login_fragment"
      app:destination="@id/login_fragment"
      app:popUpTo="@id/nav_graph"/>

    <action
      android:id="@+id/navigate_to_home_fragment"
      app:destination="@id/home_fragment"
      app:popUpTo="@id/nav_graph"/>

  </fragment>

  <fragment
    android:id="@+id/login_fragment"
    android:name="edu.cnm.deepdive.trailtrack.controller.LoginFragment"
    android:label="@string/login_fragment_label"
    tools:layout="@layout/fragment_login">

    <action
      android:id="@+id/navigate_to_home_fragment"
      app:destination="@id/home_fragment"
      app:popUpTo="@id/nav_graph"/>

  </fragment>

  <fragment
    android:id="@+id/home_fragment"
    android:name="edu.cnm.deepdive.trailtrack.controller.HomeFragment"
    android:label="@string/home_fragment_label"
    tools:layout="@layout/fragment_home">

<!--   todo Add these to the menu resource with SAME ids-->

    <action
      android:id="@+id/navigate_to_pre_login_fragment"
      app:destination="@id/pre_login_fragment"
      app:popUpTo="@id/nav_graph"/>

    <action
      android:id="@+id/open_edit_fragment"
      app:destination="@id/edit_fragment">

      <argument
        android:name="pin_id"
        app:argType="long"
        android:defaultValue="0L"/>

    </action>


  </fragment>

  <dialog
    android:id="@+id/edit_fragment"
    android:name="edu.cnm.deepdive.trailtrack.controller.EditFragment"
    tools:layout="@layout/fragment_edit">

    <argument
      android:name="pin_id"
      app:argType="long"
      android:defaultValue="0L"/>

  </dialog>

</navigation>